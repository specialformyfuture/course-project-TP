@model IEnumerable<Course_Project_TP_6.Models.BirthCertificate>

@{
    ViewBag.Title = "Index";
}

<h2>Свидетельства о рождении</h2>

<p>
    @Html.ActionLink("Добавить новое свидетельство о рождении", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Дата выдачи
        </th>
        <th>
            Кем выдан
        </th>
        <th>
            ФИО матери
        </th>
        <th>
            ФИО отца
        </th>
        <th>
           Номер
        </th>
        <th>
            Имя
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfIssue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssuedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MothersFIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FathersFIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BirthCertificate_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.BirthCertificate_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BirthCertificate_Id })
        </td>
    </tr>
}

</table>
