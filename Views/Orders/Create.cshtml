@model Course_Project_TP_6.Models.Orders

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Заявки</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.OrderType_Id, "Тип заявки", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OrderType_Id", null, htmlAttributes: new { @class = "form-control test123" })
                @Html.ValidationMessageFor(model => model.OrderType_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderName, "Имя заявки", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrderName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hiden1" style="display: none;">
            @Html.Label("OldNumber", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("OldNumber", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group hiden1" style="display: none;">
            @Html.Label("Photo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Photo", new { htmlAttributes = new { @class = "form-control", type = "file", accept="image/png, image/jpeg" } })
            </div>
        </div>

        <script type="text/javascript">
            var hidens = document.querySelectorAll('.hiden1');
            var asd = document.querySelector('.test123');
            asd.onchange = () => {
                if (asd.value == 2) {
                    hidens.forEach((hiden1) => hiden1.style.display = "block");
                } else {
                    hidens.forEach((hiden1) => hiden1.style.display = "none");
                }
            }
        </script>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
